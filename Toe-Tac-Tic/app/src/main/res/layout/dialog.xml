<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 1:"
            android:id="@+id/textViewP1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextP1Name"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textViewP1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Player 1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Player 2:"
            android:id="@+id/textViewP2"
            android:layout_below="@+id/editTextP1Name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextP2Name"
            android:layout_alignTop="@+id/textViewP2"
            android:layout_toRightOf="@+id/textViewP2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Player 2"/>
    </RelativeLayout>
</LinearLayout>